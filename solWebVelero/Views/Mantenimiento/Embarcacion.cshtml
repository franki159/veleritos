
@{
    ViewBag.Title = "Embarcacion";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Mantenimiento de Embarcación</h6>
            </div>
            <div class="card-body" id="pnl_busqueda">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" id="bus_txt_nombre" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button id="btn_buscar" class="btn btn-3-info btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-search"></i>
                            </span>
                            <span class="text">Buscar</span>
                        </button>
                        <button id="btn_nuevo" class="btn btn-3-default btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-file"></i>
                            </span>
                            <span class="text">Nuevo</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="panel pre-scrollable">
                <table id="tbl_embarcacion" class="table table-striped table-hover table-fcp">
                    <thead>
                        <tr>
                            <th style="display: none"></th>
                            <th style="width:90px;"></th>
                            <th>NOMBRE</th>
                            <th>COMBUSTIBLE</th>
                            <th>N° ASIENTOS</th>
                            <th>COLOR</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div id="lblTotalReg" class="footer-table-fcp"></div>
        </div>
    </div>
</div>
<!--***********************  EMBARCACION  **************************-->
<div class='modal modal-scroll fade' id='pnl_embarcacion' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
    <div class="modal-dialog modal-extend-fgp">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Registro de Embarcacion</h4>
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombre&nbsp;<strong class="text-danger">(*)</strong></label>
                            <input id="txt_nombre" placeholder="Ingrese nombre" class="form-control" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Tipo de combustible</label>
                            <select id="sel_tip_comb" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>N° Asientos&nbsp;<strong class="text-danger">(*)</strong></label>
                            <input id="txt_num_asiento" placeholder="Ingrese cantidad de asientos" class="form-control integerFCP" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Color</label>
                            <select id="sel_color" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Id Nave</label>
                            <input id="txt_nave" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Cod. Inter Llam.</label>
                            <input id="txt_cod_inter" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>N° Omi.</label>
                            <input id="txt_num_omi" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Ambito</label>
                            <select id="sel_ambito" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Tipo Nav.</label>
                            <select id="sel_tipo_nav" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Tipo Serv.</label>
                            <select id="sel_tipo_serv" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Constructora</label>
                            <select id="sel_constructora" class="form-control sel_autocomplete" style="width: 100%;"></select>
                        </div>
                    </div>
                </div>
                <div id="push"></div>
            </div>
            <div class="modal-footer">
                <button id="btn_guardar" type="button" class="btn btn-info btn-sm">&nbsp;Guardar</button>
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/templateSoft/vendor/jquery/jquery.min.js"></script>
<script src="~/Scripts/Mantenimiento/embarcacion.js"></script>



