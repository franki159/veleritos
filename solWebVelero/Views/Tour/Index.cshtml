
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Veleritos</title>
    <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
    <!-- Datetimepicker-->
    @Styles.Render("~/Content/assets/bootstrap-datepicker/css/datepicker.css")
    @Styles.Render("~/Content/assets/bootstrap-datetimepicker/css/datetimepicker.css")
    <!-- Select 2 filtro-->
    @Styles.Render("~/Content/assets/select2/css/select2.css")
    <!-- Custom fonts for this template-->
    @Styles.Render("~/Content/templateSoft/vendor/fontawesome-free/css/all.min.css")
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    @Styles.Render("~/Content/templateSoft/css/sb-admin-2.css")
    @Styles.Render("~/Content/templateSoft/css/animated.min.css")
    @Styles.Render("~/Content/css/stylePropio.css?v=" + @DateTime.Now.ToString("yyyyMMddHHmm"))
</head>
<body>
    <div class="container">
        <h1 class="display-4">Nuestros tours</h1>
        <p class="lead">Disfruta de nuestros hermosos recorridos en compañía de tu familia y amigos.</p>
        <div id="bodyCard" class="card-deck mb-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>
                        Copyright &copy; Veleros Perú @DateTime.Now.Year by <a href="http://charpetechnology.com/">
                            <strong>Charpe</strong>
                            <img src="~/Content/img/charpe.png" alt="Logo Charpe Enterprise" />
                        </a>
                    </span>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/Content/templateSoft/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/js/all/jquery-migrate-1.2.1.js" type="text/javascript"></script>
    <script src="~/Content/js/all/jquery.history.js"></script>
    <script src="~/Content/templateSoft/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Datetimepicker-->
    <script src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/templateSoft/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/templateSoft/js/sb-admin-2.js"></script>
    <script src="~/Content/js/general.js?v=@DateTime.Now.ToString("yyyyMMddHHmm")"></script>
    <script src="~/Content/js/all/date.js"></script>

    <script src="~/Scripts/Tour/index.js"></script>
    <!-- Select 2 filtro-->
    <script src="~/Content/assets/select2/js/select2.full.js"></script>
</body>
</html>
