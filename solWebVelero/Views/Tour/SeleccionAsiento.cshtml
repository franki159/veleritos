
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Veleritos</title>
    <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
    <!-- Datetimepicker-->
    @Styles.Render("~/Content/assets/bootstrap-datepicker/css/datepicker.css")
    @Styles.Render("~/Content/assets/bootstrap-datetimepicker/css/datetimepicker.css")
    <!-- Select 2 filtro-->
    @Styles.Render("~/Content/assets/select2/css/select2.css")
    <!-- Custom fonts for this template-->
    @Styles.Render("~/Content/templateSoft/vendor/fontawesome-free/css/all.min.css")
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    @Styles.Render("~/Content/templateSoft/css/sb-admin-2.css")
    @Styles.Render("~/Content/templateSoft/css/animated.min.css")
    @Styles.Render("~/Content/css/stylePropio.css?v=" + @DateTime.Now.ToString("yyyyMMddHHmm"))
</head>
<body>
    <div class="container" style="max-width: 960px;">
        <h1 class="display-4">Nuestros tours</h1>
        <p class="lead">Disfruta de nuestros hermosos recorridos en compañía de tu familia y amigos.</p>
        <div class="col-md-12" id="divAsiento">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-uppercase text-primary" id="titulo_asiento"></h6>
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1" id="subtitulo_asiento"></div>
                </div>
                <div class="card-body">
                    <h4 class="font-weight-bold">N° de asiento <span class="float-right" id="num_asiento"></span></h4>
                    <hr>
                    <h4 class="font-weight-bold">Precio Total <span class="float-right" id="precio_total"></span></h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-12" id="divDistribucion">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="my-4"></div>
                            <button id="btn_reservar" class="btn btn-primary btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-briefcase"></i>
                                </span>
                                <span class="text">Reservar</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>
                        Copyright &copy; Veleros Perú @DateTime.Now.Year by <a href="http://charpetechnology.com/">
                            <strong>Charpe</strong>
                            <img src="~/Content/img/charpe.png" alt="Logo Charpe Enterprise" />
                        </a>
                    </span>
                </div>
            </div>
        </footer>
    </div>
    <!--***********************  RESERVAR  **************************-->
    <div class='modal modal-scroll fade' id='pnl_reserva' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
        <div class="modal-dialog modal-extend-fgp">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Registro de asientos</h4>
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="text-dark"><i class="fas fa-users"></i>&nbsp;<strong>Información de pasajeros</strong></h4>
                            </div>
                        </div>
                        <div class="col-md-12" id="divPasajeros" style="max-height:400px;overflow-y:auto;border-bottom: 1px solid #ccc;margin-bottom: 1rem;">
                            <div class="card card-control-fcp">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Pasajero 1 | <strong>Asiento 27</strong></label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Tipo de documento</label>
                                            <select class="form-control sel_autocomplete" style="width: 100%;"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Documento de Cliente</label>
                                            <div class="input-group">
                                                <input id="txt_nro_doc" class="form-control input-sm integerFCP" type="text" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" id="btn_buscar_cliente"><i class="fa fa-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Fecha Nac.</label>
                                            <input class="form-control" type="date">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Nombres</label>
                                            <input class="form-control input-sm" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Ape. Paterno</label>
                                            <input class="form-control input-sm" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Ape. Materno</label>
                                            <input class="form-control input-sm" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Sexo</label>
                                            <select class="form-control sel_autocomplete" style="width: 100%;"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="text-dark"><i class="fas fa-address-card"></i>&nbsp;<strong>Detalles de Contacto</strong></h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Correo de contacto</label>
                                <div class="form-group">
                                    <input id="txt_correo" class="form-control input-sm" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Código</label>
                                <select id="sel_codPais" class="form-control sel_autocomplete" style="width: 100%;"></select>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Celular</label>
                                <div class="form-group">
                                    <input id="txt_celular" class="form-control input-sm" placeholder="Ingrese celular" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Observacion</label>
                                <textarea id="txt_observacion" class="form-control input-sm" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div id="push"></div>
                </div>
                <div class="modal-footer">
                    <button id="btn_guardar" type="button" class="btn btn-info btn-sm">&nbsp;Guardar</button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/templateSoft/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/js/all/jquery-migrate-1.2.1.js" type="text/javascript"></script>
    <script src="~/Content/js/all/jquery.history.js"></script>
    <script src="~/Content/templateSoft/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Datetimepicker-->
    <script src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/templateSoft/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/templateSoft/js/sb-admin-2.js"></script>
    <script src="~/Content/js/general.js?v=@DateTime.Now.ToString("yyyyMMddHHmm")"></script>
    <script src="~/Content/js/all/date.js"></script>

    <script src="~/Scripts/Tour/SeleccionAsiento.js"></script>
    <!-- Select 2 filtro-->
    <script src="~/Content/assets/select2/js/select2.full.js"></script>
</body>
</html>
